{
  "policyName": "Humanitarian Aid Distribution Verification",
  "version": "1.0.0",
  "description": "Verifiable aid distribution using Hedera HCS",
  
  "roles": ["NGO_Admin", "Volunteer", "Beneficiary", "Auditor"],
  
  "schemas": {
    "RefugeeWristbandDID": {
      "type": "VerifiableCredential",
      "fields": ["did", "wristbandId", "registrationDate", "issuer"]
    },
    "AidDistributionEvent": {
      "type": "VerifiableCredential", 
      "fields": ["eventId", "beneficiaryDID", "aidType", "quantity", "timestamp", "location"]
    }
  },
  
  "workflow": [
    {
      "step": 1,
      "name": "Register Beneficiary",
      "action": "Issue DID credential to wristband",
      "role": "NGO_Admin",
      "hcsLog": true
    },
    {
      "step": 2,
      "name": "Distribute Aid",
      "action": "Scan wristband, log event to HCS",
      "role": "Volunteer",
      "hcsLog": true,
      "preventDuplicates": "24h"
    },
    {
      "step": 3,
      "name": "Audit Trail",
      "action": "Query immutable HCS records",
      "role": "Auditor",
      "endpoint": "/audit/{did}"
    }
  ],
  
  "sampleRecords": [
    {
      "type": "DID_Registration",
      "did": "did:hedera:testnet:z6Mk...",
      "wristbandId": "WB-000001",
      "timestamp": "2025-10-24T10:00:00Z"
    },
    {
      "type": "Aid_Distribution",
      "eventId": "evt_2025_001",
      "beneficiaryDID": "did:hedera:testnet:z6Mk...",
      "aidType": "FOOD",
      "quantity": 1,
      "timestamp": "2025-10-24T11:30:00Z",
      "hcsTopicId": "0.0.12345",
      "txId": "0.0.98765@1729767000.123456789"
    }
  ]
}